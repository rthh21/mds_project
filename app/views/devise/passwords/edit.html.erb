
<html>
  <head>
  <%= stylesheet_link_tag 'devise/shared.css', media: 'all', data: { turbolinks: false } %>
  <%= stylesheet_link_tag 'devise/registrations.css', media: 'all', data: { turbolinks: false } %>
  <%= stylesheet_link_tag 'application.css', media: 'all', data: { turbolinks: false } %>
  </head>
  <body>
    <img src="<%= asset_path('gradient.png') %>" alt="Background" class="image" />
    <div class="container">
      <div class="wrapper">
        <h2>Change your password</h2>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
        
          <div class="field">
            <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        
          <div class="actions">
            <%= f.submit "Change my password" %>
          </div>
        <% end %>
        
        <div class="or">   Or if you already have an account:   </div>
        <div class = "links"> 
          <%= render "devise/shared/links" %>
        </div>
        </div>
      </div>
  </body>
</html>